<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen

    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="appearance"
        android:title="အသြင္အျပင္">

        <SwitchPreference
            android:defaultValue="false"
            android:key="night_mode"
            android:title="Night mode"
            android:selectable="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="other"
        android:title="အျခား">

        <Preference
            android:key="ack"
            android:title="Acknowledgement"
            android:selectable="true"/>

        <Preference
            android:key="about"
            android:title="About"
            android:summary="To see about the app"
            android:selectable="true"/>
        <Preference
            android:title="Version"
            android:summary="1.0"
            android:selectable="true"/>

        <Preference
            android:key="feedback"
            android:title="Feedback"
            android:summary="To give feedback"
            android:selectable="true">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="mailto:minthihaaung279@gmail.com"/>
            <extra
                android:name="android.intent.extra.SUBJECT"
                android:value="Feedback for Paper Mobile App"/>

        </Preference>

        <Preference
            android:key="help"
            android:title="Help"
            android:summary="To get help"
            android:selectable="true"/>
    </PreferenceCategory>

</PreferenceScreen>